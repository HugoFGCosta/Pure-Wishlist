{% comment %}
  Pure Wishlist â€” Embed Block
  Auto-injects wishlist hearts on product cards + nav icon in header.
  Enable via Theme Settings > App Embeds.
{% endcomment %}

<div
  id="pw-embed-config"
  data-pw-embed
  data-pw-customer-id="{{ customer.id }}"
  data-pw-color="{{ block.settings.color }}"
  data-pw-position="{{ block.settings.position }}"
  data-pw-nav-enabled="{{ block.settings.nav_enabled }}"
  data-pw-nav-color="{{ block.settings.nav_color }}"
  data-pw-nav-url="{{ block.settings.nav_url | default: '/pages/wishlist' }}"
  style="display:none"></div>

{% schema %}
{
  "name": "Pure Wishlist",
  "target": "body",
  "javascript": "wishlist.js",
  "stylesheet": "wishlist.css",
  "settings": [
    {
      "type": "header",
      "content": "Heart overlays"
    },
    {
      "type": "color",
      "id": "color",
      "label": "Heart color",
      "default": "#ff0000"
    },
    {
      "type": "select",
      "id": "position",
      "label": "Icon position",
      "options": [
        { "value": "top-right", "label": "Top right" },
        { "value": "top-left", "label": "Top left" },
        { "value": "bottom-right", "label": "Bottom right" },
        { "value": "bottom-left", "label": "Bottom left" }
      ],
      "default": "top-right"
    },
    {
      "type": "header",
      "content": "Header wishlist icon"
    },
    {
      "type": "checkbox",
      "id": "nav_enabled",
      "label": "Show icon in header",
      "default": true
    },
    {
      "type": "color",
      "id": "nav_color",
      "label": "Header icon color"
    },
    {
      "type": "url",
      "id": "nav_url",
      "label": "Wishlist page link"
    }
  ]
}
{% endschema %}
