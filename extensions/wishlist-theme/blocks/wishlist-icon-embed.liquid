{% comment %}
  Pure Wishlist â€” Heart Overlay Embed
  Auto-injects wishlist hearts on all product card images.
  Enable via Theme Settings > App Embeds.
{% endcomment %}

<div
  id="pw-embed-config"
  data-pw-embed
  data-pw-customer-id="{{ customer.id }}"
  data-pw-color="{{ block.settings.color }}"
  data-pw-position="{{ block.settings.position }}"
  style="display:none"></div>

{% schema %}
{
  "name": "Pure Wishlist Icons",
  "target": "body",
  "javascript": "wishlist.js",
  "stylesheet": "wishlist.css",
  "settings": [
    {
      "type": "color",
      "id": "color",
      "label": "Heart color",
      "default": "#ff0000"
    },
    {
      "type": "select",
      "id": "position",
      "label": "Icon position",
      "options": [
        { "value": "top-right", "label": "Top right" },
        { "value": "top-left", "label": "Top left" },
        { "value": "bottom-right", "label": "Bottom right" },
        { "value": "bottom-left", "label": "Bottom left" }
      ],
      "default": "top-right"
    }
  ]
}
{% endschema %}
